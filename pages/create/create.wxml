<view>On this page users can create an event</view>
<view wx:if="{{occasionSpecSelected}}" class="unselectedCard" wx:for="{{occasions}}" >
  <view data-occa="{{item}}"  data-index="{{index}}" bindtap="selectOccasion">{{item}}</view>
  <view wx:for="{{occasionSpecs}}" wx:for-item="occasionSpec" wx:for-index="specIndex" wx:if="{{occasionIndex == index && occasionSelected}}">
    <view data-focca="{{occasionSpec}}" bindtap="selectOccasionSpec">{{occasionSpec.title}}</view>
  </view>  
</view>

<view>Event occasion: {{finalOccasion}} </view>

<view wx:if="{{goToSelectActivity}}" >

  <view wx:for="{{activities}}" wx:for-item="activity">
    <view data-facti="{{activity}}" class="unselectedCard" bindtap="selectActivity">{{activity}}</view>
  </view>
  
</view>

<view>Activity: {{finalActivity}}</view>

<view wx:if="{{goToSelectDates}}">
</view>

<button bindtap="startAgain">Start Again!</button>

