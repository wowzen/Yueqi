<view class="header">Create your event! </view>

<view wx:if="{{goToSelectActivity}}" wx:if="{{goToSelectDates}}">Event occasion: {{finalOccasion}} </view>
<view wx:if="{{goToSelectDates}}">Activity: {{finalActivity}}</view>

<view wx:if="{{occasionSpecSelected}}">Select why you want to organize an event:</view>

<view wx:if="{{occasionSpecSelected}}" class="unselectedCard" wx:for="{{occasions}}" > 
  <view data-occa="{{item}}"  data-index="{{index}}" bindtap="selectOccasion">{{item}}</view>
  <view wx:if="{{occasionIndex == index && occasionSelected}}">
    <view>Specify what kind of {{mainOccasion}}:</view>
    <view class="unselectedCard" wx:for="{{occasionSpecs}}" wx:for-item="occasionSpec" wx:for-index="specIndex" >
    <view data-focca="{{occasionSpec}}" bindtap="selectOccasionSpec">{{occasionSpec.title}}</view>
  </view>  
  </view>
</view>

<view wx:if="{{goToSelectActivity}}" >
<view>Select why you want to organize an activity:</view>
  <view wx:for="{{activities}}" wx:for-item="activity">
    <view data-facti="{{activity}}" class="unselectedCard" bindtap="selectActivity">{{activity}}</view>
  </view>
</view>

<button bindtap="startAgain" type="warn">Start over</button>

<view wx:if="{{goToSelectDates}}">
  <button bindtap="submitNewEvent" type="primary">Select my event dates</button>
</view>

