<!--pages/calendar/calendar.wxml-->
<view class="container">
  <view class="header-date">Select the dates for your event</view>
  <calendar active-style='square' days-color="{{dayStyle}}" week-style="cn" binddayClick='dayClick'/>

  <view class="header-time">Select the time for your event</view>

  <view class="time-picker">
    <picker mode="time" value="{{start_time}}" start="00:00" end="23:00" bindchange="bindStartTimeChange">
      <view class="picker">
        Start Time: {{start_time}}
      </view>
      </picker>
  </view>

    <view class="time-picker">
    <picker mode="time" value="{{end_time}}" start="{{start_time || '00:00' }}" end="23:00" bindchange="bindEndTimeChange">
      <view class="picker">
        End Time: {{end_time}}
      </view>
    </picker>
  </view>
</view>

<view> 
  <button bindtap="addSlot">Add Slot</button>
</view>

<view wx:if="{{slotsAdded}}" >Below is your chosen Slots</view>
<view class="chosenSlot"  wx:for="{{chosenSlots}}">
  <view>{{item.start_date}}</view>
  <view>{{item.end_date}}</view>
</view>

<view wx:if="{{slotsAdded}}"> 
  <button bindtap="toShowPage">View your Invitation</button>
</view>

