<view class="container">
  
  <view class="start bold">Let the fun begin!</view>

  <block wx:if="{{currentUser}}">
    <button class="create-fun-btn" bindtap="createEvent">Create fun</button>
  </block>

  <block wx:else>
    <view class="start">Login to join the fun!</view>
    <button class="login-btn" open-type="getUserInfo" bindgetuserinfo="login">Login</button>
  </block>

  <block wx:if="{{currentUser}}">
    <button class="my-fun-btn" bindtap="viewEvents">My fun</button>
  </block>

</view>
