<view class="container">
  <swiper class="swipe-card" indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
  <block wx:for="{{imgUrls}}" wx:key="key">
    <swiper-item>
      <image src="{{item}}" class="slide-image" mode="aspectFit"/>
    </swiper-item>
  </block>
</swiper>

  <button class="create-fun-btn" bindtap="createEvent">Plan an event!</button>
  <button class="my-fun-btn" bindtap="viewEvents">My events</button>
</view>