/* pages/userevents/userevents.wxss */
.container {
  padding: 16px;
  min-height: 100vh;
  background-color: #FFFAF5;
}

.profile {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profile-name {
  margin-top: 16rpx;
  font-size: 18px;
}

.profile-image {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  border: 1px solid #e4e4e4;
}

.image {
  width: 100%;
  border-radius: 8px;
}

.description {
  padding: 16px;
}

.tabs {
  padding-top: 12px;
  padding-bottom: 12px;
}

.tab {
  padding: 8px 16px;
  margin-right: 16px;
  background: #ecf7ff;
  border: 1px solid #b7e1ff;
  border-radius: 25px;
}

.active-tab {
  background-color: #b7e1ff;
}

.header1 {
  padding-top: 16px;
  padding-bottom: 16px;
  padding-left: 36px;
  padding-right: 36px;
  margin-right: 24px;
  border-radius: 28px; 
  font-family: Roboto;
  font-weight: 300;
  font-size: 18px;
}

.header2 {
  padding-top: 16px;
  padding-bottom: 16px;
  padding-left: 26px;
  padding-right: 26px;
  background: #ecf7ff;
  border-radius: 28px; 
  font-family: Roboto;
  font-weight: 300;
  font-size: 18px;
  align-content: right;
  margin-bottom: 16px;
}

.divider {
  margin: 24px 0;
  height: 1px;
  background-color: #e4e4e4;
  width: 100%;
}

.login {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 80px 0;
}

.login-title {
  padding: 0 32px;
  margin-top: 16px;
  font-size: 20px;
}

.login-btn {
  font-size: 18px;
  min-width: 75vw;
  background: #97FEA2;
  border-radius: 25px;
  margin: 32px 32px 0 32px;
}

