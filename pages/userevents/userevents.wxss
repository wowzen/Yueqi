/* pages/userevents/userevents.wxss */
.container {
  padding: 16px;
  min-height: 100vh;
  background-color: #FFFAF5;
}

.profile {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.profile-name {
  margin-top: 16rpx;
  font-size: 18px;
}

.profile-image {
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  border: 1px solid #e4e4e4;
}

.image {
  width: 100%;
  border-radius: 8px;
}

.description {
  padding: 16px;
}

.header {
  font-size: 18px;
  /* font-weight: 600; */
  margin-top: 26px;
  margin-bottom: 16px;
  margin-left: 16rpx;
  margin-right: 16rpx;

  padding: 6px 12px;
  border-radius: 25px;
  background: #ecf7ff;
}

.divider {
  margin: 24px 0;
  height: 1px;
  background-color: #e4e4e4;
  width: 100%;
}

.login {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 80px 0;
}

.login-title {
  padding: 0 32px;
  margin-top: 16px;
  font-size: 20px;
}

.login-btn {
  font-size: 18px;
  min-width: 75vw;
  background: #97FEA2;
  border-radius: 25px;
  margin: 32px 32px 0 32px;
}

.active-tab {
  font-weight: 900;
  background-color: #b7e1ff;
}
