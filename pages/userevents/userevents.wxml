
<view class="header">My events</view>

<view class="container">

  <view wx:if="currentUser">
    <view class="header">Created by me {{currentUser.nickname}}</view>
    <view class="card mycards" wx:for="{{myEvents}}" wx:for-item="myEvent" bindtap="goToEvent" data-eventid="{{myEvent.id}}">
      <view>{{myEvent.occasion}}</view>
      <view>{{myEvent.activity}}</view>
    </view>
  </view>

  <view wx:if="currentUser">
    <view class="header">Created by others</view>
    <view class="card mycards" wx:for="{{otherUserEvents}}" wx:for-item="otherEvent" bindtap="goToEvent" data-eventid="{{otherEvent.id}}">
      <view>{{otherEvent.occasion}}</view>
      <view>{{otherEvent.activity}}</view>
    </view>
  </view>

